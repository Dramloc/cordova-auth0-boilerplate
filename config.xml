<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dramloc.cordova.test" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>cordova-auth0-boilerplate</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-safariviewcontroller" spec="^1.5.3" />
    <plugin name="cordova-plugin-customurlscheme" spec="^4.3.0">
        <variable name="URL_SCHEME" value="com.dramloc.cordova.test" />
        <variable name="ANDROID_SCHEME" value="com.dramloc.cordova.test" />
        <variable name="ANDROID_HOST" value="dramloc.eu.auth0.com" />
        <variable name="ANDROID_PATHPREFIX" value="/cordova/com.dramloc.cordova.test/callback" />
    </plugin>
    <preference name="AndroidLaunchMode" value="singleTask" />
    <engine name="android" spec="^7.0.0" />
</widget>
